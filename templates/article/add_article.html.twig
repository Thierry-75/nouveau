{% extends 'base.html.twig' %}

{% block title %}Article ajout!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center p-12 mt-2">

        <div class="mx-auto w-full max-w-full">
            <h3 class="text-3xl font-semibold text-center text-cyan-800 mb-5">Nouvel Article</h3>
            {{ form_start(form_article_new,{attr:
                {class: "bg-white w-full py-6 px-6 sm:px2",
                id:"form_article_new",
                novalidate: 'novalidate'
                }
            }) }}
            <div>
                <div class="mb-5">
                    <div class="text-md text-cyan-700 text-left">
                        {{ form_label(form_article_new.title) }}
                        <div class="text-red-600 text-center">
                        {{ form_errors(form_article_new.title) }}
                        </div>
                    </div>
                    {{ form_widget(form_article_new.title) }}
                </div>

            </div>
            <div>
                <div class="mb-5">
                    <div class="text-md text-cyan-700 text-left">
                        {{ form_label(form_article_new.introduction) }}
                        <div class="text-red-600 text-center">
                            {{ form_errors(form_article_new.introduction) }}
                        </div>
                    </div>
                    {{ form_widget(form_article_new.introduction) }}
                </div>

            </div>
            <div>
                <div class="mb-5">
                    <div class="text-md text-cyan-700 text-left">
                        {{ form_label(form_article_new.developpement) }}
                        <div class="text-red-600 text-center">
                            {{ form_errors(form_article_new.developpement) }}
                        </div>
                    </div>
                    {{ form_widget(form_article_new.developpement) }}
                </div>

            </div>
            <div>
                <div class="mb-5">
                    <div class="text-md text-cyan-700 text-left">
                        {{ form_label(form_article_new.conclusion) }}
                        <div class="text-red-600 text-center">
                            {{ form_errors(form_article_new.conclusion) }}
                        </div>
                    </div>
                    {{ form_widget(form_article_new.conclusion) }}
                </div>

            </div>
            <div class="mb-5">
                <div class="text-md text-cyan-700 text-left">
                    {{ form_label(form_article_new.photos) }}
                    <div class="text-red-600 text-center">
                        {{ form_errors(form_article_new.photos) }}
                    </div>
                </div>
                {{ form_widget(form_article_new.photos) }}
            </div>






            <div>
                    <button
                        class="btn-retour py-3.5 text-lg" id="form_article_new_submit">
                        Nouvel Article
                    </button>
                </div>
            {{ form_end(form_article_new) }}
        </div>
    </div>

{% endblock %}
