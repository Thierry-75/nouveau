{% extends 'base.html.twig' %}

{% block title %}Changer mot de passe
{% endblock %}

{% block importmap %}
	{{ importmap(['forgetPassword']) }}
{% endblock %}
{% block body %}
	<div class="font-[sans-serif] max-w-3xl items-center mx-auto md:h-screen p-4">
		<div class="grid md:grid-cols-3 items-center shadow-[0_2px_10px_-3px_rgba(6,81,237,0.3)] rounded-xl overflow-hidden mt-12">
			<div class="max-md:order-1 flex flex-col justify-center space-y-16 max-md:mt-16 min-h-full bg-gradient-to-r from-cyan-900 to-cyan-700 lg:px-8 px-4 py-4">
				<div>
					<h6 class="text-yellow-300 text-sm font-semibold">Nouveau mot de passe</h6>
					<p class="text-[12px] italic text-gray-50 mt-2 leading-relaxed">Un lien d'activation vous sera envoy&eacute;.</p>
					<p class="text-[12px] italic text-gray-50 mt-2 leading-relaxed"></p>
					<p class="text-[12px] italic text-gray-50 mt-2 leading-relaxed"></p>
					<ul id="allowState">
						<li id="allowEmail" class="text-[12px] italic mt-4 ml-3 leading-relaxed"></li>
						<li id="allowPassword" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
						<li id="allowAgreeTerms" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
					</ul>
				</div>
				<div>
					<h6 class="text-white text-sm font-semibold">Instruction :</h6>
					<p id="message" class="text-[12px] italic text-yellow-200 mt-2 leading-relaxed"></p>
					<div class="ml-4"></div>
				</div>
			</div>
			{{ form_start(requestForm, {attr: {
                novalidate: "novalidate",
                class: "bg-white md:col-span-2 w-full py-6 px-6 sm:px-16",
                id: "reset_password_request"
            }
            })
            }}
			<div class="mb-4">
				<h3 class=" text-2xl font-light text-center text-cyan-600">Saisir</h3>
			</div>

			<div class="space-y-6">
				<div>
					<div class="relative flex items-center">
						{{ form_widget(requestForm.courriel) }}
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="w-4 h-4 absolute right-4 cursor-pointer">
							<path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"/>
							<path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"/>
						</svg>
					</div>
					<div class="text-sm text-red-700">
						{{ form_errors(requestForm.courriel) }}
					</div>
				</div>
			</div>
			<div class="space-y-4 mt-1">
				<p class="text-gray-500 text-xs font-light text-center">&nbsp;</p>
			</div>

			<div class="!mt-12">
				<button type="submit" id="request_form_submit" class="btn-retour">
					Saisir
				</button>
			</div>

			{{ form_end(requestForm) }}

		</div>
	</div>
{% endblock %}
