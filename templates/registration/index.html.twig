{% extends 'base.html.twig' %}

{% block title %}Votre profil{% endblock %}



{% block importmap %}
    {# importmap(['register']) #}
{% endblock %}

{% block body %}
    <!-- Hero -->
    <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 mt-14">
        <!-- Grid -->
        <div class="grid lg:grid-cols-7 lg:gap-x-8 xl:gap-x-12 lg:items-center text-left">

            <div class="lg:col-span-3">
                <h4 class="block font-bold text-cyan-800 sm:text-3xl md:text-3xl lg:text-4xl dark:text-white">{{ user.login }}</h4>
                <div class="mt-6 lg:mt-8 flex flex-col items-center gap-2 sm:flex-row sm:gap-3">
                    <div class="w-full sm:w-auto">

                     Email :<input type="text" id="email" name="email" value=" {{ user.email }}" disabled class=" w-96 text-cyan-700 mt-4 mb-3 ">
                    </div>
                </div>
                <div class="mt-2 lg:mt-2 flex flex-col items-center gap-2 sm:flex-row sm:gap-3">
                    <div class="w-full sm:w-auto">

                        N° de téléphone :<input type="text" id="email" name="email" value=" {{ user.phone }}" disabled class="w-96 text-cyan-700 mt-4 mb-3 ">
                    </div>
                </div>
                <div class="mt-3 lg:mt-3 flex flex-col items-center gap-2 sm:flex-row sm:gap-3">
                    <div class="w-full sm:w-auto mb-5">

                        {% if user.roles[0] %}
                            Abonné depuis le :<input type="text" id="email" name="email" value=" {{ user.createdAt |date('d - m - Y') }}" disabled class=" w-96 text-cyan-700 mt-4 mb-3 ">
                        {% endif %}
                    </div>
                </div>
                <a class="btn-azur w-full " href="{{ path('app_profil_update',{id:app.user.id}) }}">
                    Modifier Le profil
                </a>
            </div>
            <div class="lg:col-span-4 mt-10 lg:mt-0">
                <img class="w-96 h-96 rounded-xl shadow-md" src="{{ asset('assets/uploads/users/') ~ user.portrait }}" alt="{{ user.login }}">
            </div>
            <!-- End Col -->
        </div>
        <!-- End Grid -->
    </div>
    <!-- End Hero -->

{% endblock %}
